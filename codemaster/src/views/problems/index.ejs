<%- contentFor('body') %>

<div class="row mb-4">
    <div class="col-md-8">
        <h2>Danh sách bài tập</h2>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Tìm kiếm bài tập...">
            <button class="btn btn-outline-secondary" type="button">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Lọc</h5>
            </div>
            <div class="card-body">
                <h6 class="mb-3">Độ khó</h6>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="difficulty-easy">
                    <label class="form-check-label difficulty-easy" for="difficulty-easy">
                        Dễ
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="difficulty-medium">
                    <label class="form-check-label difficulty-medium" for="difficulty-medium">
                        Trung bình
                    </label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="difficulty-hard">
                    <label class="form-check-label difficulty-hard" for="difficulty-hard">
                        Khó
                    </label>
                </div>

                <h6 class="mb-3">Ngôn ngữ</h6>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="lang-javascript">
                    <label class="form-check-label" for="lang-javascript">
                        JavaScript
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="lang-python">
                    <label class="form-check-label" for="lang-python">
                        Python
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="lang-java">
                    <label class="form-check-label" for="lang-java">
                        Java
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="row">
            <% for(let i = 1; i <= 9; i++) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 problem-card">
                        <div class="card-body">
                            <h5 class="card-title">Bài tập <%= i %></h5>
                            <p class="card-text">
                                Mô tả ngắn về bài tập <%= i %> và các yêu cầu cần thực hiện.
                            </p>
                            <div class="mb-3">
                                <span class="badge bg-success me-2">Dễ</span>
                                <span class="badge bg-info">JavaScript</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-users"></i> 123 người đã giải
                                </small>
                                <a href="/problems/<%= i %>" class="btn btn-primary btn-sm">
                                    Giải bài
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>

        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div> 